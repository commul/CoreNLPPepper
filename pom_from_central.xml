	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>3.5.0</version>
				<extensions>true</extensions>
				<configuration>
					<instructions>

						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Bundle-Name>${project.artifactId}</Bundle-Name>
						<!-- <Export-Package>
							edu.stanford.nlp.*; version="3.9.2",
						</Export-Package> -->
						<Export-Package>
							edu.stanford.nlp.*; version="3.9.2",
							eu.fbk.dh.*; version="0.2",
							eu.fbk.utils.*; version="3.1.1",
							org.ahocorasick.*; version="0.4.0",
							com.sun.activation.*; version="1.2.0",
						</Export-Package>
						<Import-Package>
							*;resolution:=optional
						</Import-Package>
						<DynamicImport-Package>
							*
						</DynamicImport-Package>

						<Embed-Dependency>
						tint,
						tint-textpro,
						tint-eval,
						tint-digimorph,
						tint-digimorph-annotator,
						tint-tokenizer,
						tint-tense,
						tint-readability,
						tint-geoloc-annotator,
						tint-heideltime-annotator,
						tint-models,
						tint-runner,
						utils-core,
						mapdb,
						kotlin-runtime,
						kotlin-stdlib				
						</Embed-Dependency>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
